{
  "compilerOptions": {
    "module": "commonjs",
    // "target": "es2018",
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "lib": ["es2018"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
